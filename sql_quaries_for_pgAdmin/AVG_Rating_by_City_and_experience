SELECT
    city,
    CASE 
        WHEN experience_years BETWEEN 0 AND 1 THEN '0–1 years'
        WHEN experience_years BETWEEN 2 AND 4 THEN '2–4 years'
        WHEN experience_years BETWEEN 5 AND 9 THEN '5–9 years'
        WHEN experience_years >= 10 THEN '10+ years'
    END AS experience_group,
    ROUND(AVG(average_rating), 2) AS avg_driver_rating,
    COUNT(*) AS num_drivers
FROM drivers
GROUP BY city, experience_group
ORDER BY city, experience_group;
